# Змінні оточення для додатку PerekypApp

# Загальні налаштування
EXPO_PUBLIC_APP_ENV=development # development, staging, production
EXPO_PUBLIC_APP_VERSION=1.0.0

# Налаштування Supabase для розробки
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-local-anon-key
SUPABASE_SERVICE_KEY=your-local-service-key

# Налаштування Supabase для тестування
SUPABASE_STAGING_URL=https://your-staging-project.supabase.co
SUPABASE_STAGING_ANON_KEY=your-staging-anon-key
SUPABASE_STAGING_SERVICE_KEY=your-staging-service-key

# Налаштування Supabase для продакшн
SUPABASE_PROD_URL=https://your-production-project.supabase.co
SUPABASE_PROD_ANON_KEY=your-production-anon-key
SUPABASE_PROD_SERVICE_KEY=your-production-service-key

# Налаштування Sentry для моніторингу помилок
SENTRY_DSN=https://your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Налаштування для i18n
EXPO_PUBLIC_DEFAULT_LOCALE=uk
EXPO_PUBLIC_FALLBACK_LOCALE=ru

# Налаштування для API
EXPO_PUBLIC_API_URL=https://api.perekyp.com
EXPO_PUBLIC_API_TIMEOUT=30000

# Налаштування для кешування
EXPO_PUBLIC_CACHE_TTL=3600000 # 1 година в мілісекундах

# Налаштування для аналітики
EXPO_PUBLIC_ANALYTICS_ENABLED=true 